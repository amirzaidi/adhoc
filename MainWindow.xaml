<Window x:Class="AdHocMAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdHocMAC"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Ad-Hoc Networks: MAC Simulation" Height="600" Width="800">
    <Grid Name="Grid">
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="30" Width="70" Content="Start" Click="StartButton_Click" />
        <Slider Name="NodeCount" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Width="680" Height="30" Value="2" Maximum="50"
    AutoToolTipPlacement="BottomRight" TickPlacement="Both" TickFrequency="1" 
IsSnapToTickEnabled="True" />
        <Button Content="Start Route" HorizontalAlignment="Left" Margin="704,469,0,0" VerticalAlignment="Top" Height="37" Width="70" Click="Route_Click"/>
        <Button Content="Log" HorizontalAlignment="Left" Margin="704,399,0,0" VerticalAlignment="Top" Height="37" Width="70" Click="Log_Click"/>

    </Grid>
</Window>
